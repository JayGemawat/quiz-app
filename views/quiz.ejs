<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quiz</title>

  <!-- Bootstrap CSS & SweetAlert -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <style>
    body {
      padding: 2rem;
      background-color: #f7f9fc;
    }
    #timer {
      font-size: 1.5rem;
      font-weight: bold;
      color: #ff4d4f;
      text-align: right;
      margin-bottom: 1rem;
    }
    .question {
      margin-bottom: 2rem;
      padding: 1rem;
      border-radius: 10px;
      background: #ffffff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .submit-btn {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    }
    .submit-btn:hover {
      background-color: #0056b3;
    }

    #blockedOverlay {
      position: fixed;
      top: 0; left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(255,255,255,0.95);
      z-index: 9999;
      display: none;
      justify-content: center;
      align-items: center;
      text-align: center;
      font-size: 1.5rem;
      color: red;
    }
  </style>
</head>
<body oncopy="return false" onpaste="return false" oncontextmenu="return false">
  <div id="blockedOverlay">⚠️ Quiz blocked due to suspicious screen activity. Refresh to continue.</div>

  <div class="container">
    <div id="timer">30:00</div>
    <h2 class="mb-4">Welcome, <%= username %>!</h2>
    <h4 class="mb-4">Answer the following questions:</h4>

    <form id="quizForm" action="/submit" method="post">
      <input type="hidden" name="username" value="<%= username %>">
      <input type="hidden" id="questionsInput" name="questions" />

      <% questions.forEach((q, i) => {
          const choices = [...q.incorrect_answers];
          const randIndex = Math.floor(Math.random() * (choices.length + 1));
          choices.splice(randIndex, 0, q.correct_answer);
      %>
        <div class="question">
          <h5>Q<%= i + 1 %>: <%- q.question %></h5>
          <% choices.forEach(choice => { %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="q<%= i %>" value="<%- choice %>" required>
              <label class="form-check-label"><%- choice %></label>
            </div>
          <% }) %>
        </div>
      <% }) %>

      <button type="submit" class="submit-btn mt-3">Submit Quiz</button>
    </form>
  </div>

  <!-- Embed JSON -->
  <script id="question-data" type="application/json">
    <%- JSON.stringify(questions) %>
  </script>

  <!-- Full JS Logic -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const questionsData = JSON.parse(document.getElementById("question-data").textContent);
      document.getElementById("questionsInput").value = JSON.stringify(questionsData);

      // Reset timer on fresh load
      localStorage.removeItem("quizTime");

      const timerElement = document.getElementById("timer");
      let totalSeconds = 30 * 60;

      const timerInterval = setInterval(() => {
        const minutes = Math.floor(totalSeconds / 60);
        const seconds = totalSeconds % 60;
        timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        totalSeconds--;

        if (totalSeconds < 0) {
          clearInterval(timerInterval);
          Swal.fire({
            icon: 'info',
            title: 'Time\'s up!',
            text: 'Your quiz will be submitted automatically.',
            allowOutsideClick: false,
          }).then(() => {
            document.getElementById("quizForm").submit();
          });
        }
      }, 1000);

      // Confirm on Submit
      document.getElementById("quizForm").addEventListener("submit", function(e) {
        e.preventDefault();
        clearInterval(timerInterval);
        Swal.fire({
          title: "Are you sure you want to submit?",
          icon: "question",
          showCancelButton: true,
          confirmButtonText: "Yes, submit it!",
          cancelButtonText: "Cancel"
        }).then((result) => {
          if (result.isConfirmed) {
            localStorage.removeItem("quizTime");
            this.submit();
          } else {
            totalSeconds++; // resume
          }
        });
      });

      // Screenshot/Clipboard Prevention
      document.addEventListener("keydown", function (e) {
        if (e.key === "PrintScreen") {
          navigator.clipboard.writeText("");
          alert("Screenshots are not allowed.");
        }
        if ((e.ctrlKey || e.metaKey) && (e.key === "s" || e.key === "p")) {
          e.preventDefault();
        }
      });

      document.addEventListener("keyup", function (e) {
        if (e.key === "PrintScreen") {
          navigator.clipboard.writeText("");
        }
      });

      // DevTools Detection + Overlay Block
      const overlay = document.getElementById("blockedOverlay");
      let devtoolsOpen = false;

      setInterval(() => {
        const isOpen = window.outerWidth - window.innerWidth > 160 || window.outerHeight - window.innerHeight > 160;
        if (isOpen && !devtoolsOpen) {
          devtoolsOpen = true;
          overlay.style.display = "flex";
        }
      }, 1000);
    });
  </script>
</body>
</html>
