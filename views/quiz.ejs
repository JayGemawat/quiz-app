<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quiz</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      padding: 2rem;
      background-color: #f7f9fc;
    }
    #timer {
      font-size: 1.5rem;
      font-weight: bold;
      color: #ff4d4f;
      text-align: right;
      margin-bottom: 1rem;
    }
    .question {
      margin-bottom: 2rem;
      padding: 1rem;
      border-radius: 10px;
      background: #ffffff;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    .submit-btn {
      background-color: #007bff;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
    }
    .submit-btn:hover {
      background-color: #0056b3;
    }
  </style>
</head>
<body oncopy="return false" onpaste="return false" oncontextmenu="return false">

  <div class="container">
    <div id="timer">30:00</div>
    <h2 class="mb-4">Welcome, <%= username %>!</h2>
    <h4 class="mb-4">Answer the following questions:</h4>

    <form id="quizForm" action="/submit" method="post">
      <input type="hidden" name="username" value="<%= username %>">
      <input type="hidden" id="questionsInput" name="questions" />

      <% questions.forEach((q, i) => {
          const choices = [...q.incorrect_answers];
          const randIndex = Math.floor(Math.random() * (choices.length + 1));
          choices.splice(randIndex, 0, q.correct_answer);
      %>
        <div class="question">
          <h5>Q<%= i + 1 %>: <%- q.question %></h5>
          <% choices.forEach(choice => { %>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="q<%= i %>" value="<%- choice %>" required>
              <label class="form-check-label"><%- choice %></label>
            </div>
          <% }) %>
        </div>
      <% }) %>

      <button type="submit" class="submit-btn mt-3">Submit Quiz</button>
    </form>
  </div>

  <!-- Embedding JSON data safely -->
  <script id="question-data" type="application/json">
    <%- JSON.stringify(questions) %>
  </script>

  <!-- JavaScript -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      // Parse questions from JSON script tag
      const questionsData = JSON.parse(document.getElementById("question-data").textContent);
      document.getElementById("questionsInput").value = JSON.stringify(questionsData);

      // Prevent reload
      window.addEventListener("beforeunload", function (e) {
        e.preventDefault();
        e.returnValue = "";
      });

      // Timer logic
      const timerElement = document.getElementById("timer");
      let totalSeconds = localStorage.getItem("quizTime")
        ? parseInt(localStorage.getItem("quizTime"))
        : 30 * 60;

      function updateTimer() {
        const minutes = Math.floor(totalSeconds / 60);
        const seconds = totalSeconds % 60;
        timerElement.innerText =
          `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

        if (totalSeconds <= 0) {
          localStorage.removeItem("quizTime");
          alert("Time's up! Submitting the quiz.");
          document.getElementById("quizForm").submit();
        } else {
          totalSeconds--;
          localStorage.setItem("quizTime", totalSeconds);
          setTimeout(updateTimer, 1000);
        }
      }

      updateTimer();

      document.getElementById("quizForm").addEventListener("submit", () => {
        localStorage.removeItem("quizTime");
      });
    });
  </script>
</body>
</html>
